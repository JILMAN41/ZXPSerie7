-- ====================================================================
-- VERIFICACIÓN FINAL
-- ====================================================================
PRINT '🔍 Verificando objetos creados...';
PRINT '';

SELECT 
    SCHEMA_NAME(schema_id) AS SchemaName,
    name AS ObjectName,
    type_desc AS ObjectType,
    create_date AS CreatedDate
FROM sys.objects
WHERE schema_id = SCHEMA_ID('ExternalServices')
    AND type IN ('U', 'P', 'V', 'FN', 'TR')
ORDER BY 
    CASE type
        WHEN 'U' THEN 1
        WHEN 'P' THEN 2
        WHEN 'V' THEN 3
        WHEN 'FN' THEN 4
        WHEN 'TR' THEN 5
        ELSE 6
    END,
    name;

PRINT '';
