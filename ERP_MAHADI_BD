        ('TWILIO', 'Twilio - SMS y WhatsApp', 'Messaging', 
         'https://api.twilio.com/2010-04-01/', 'https://www.twilio.com/docs', 1, 1, 
         'BASIC', 10000, 3),
        
        ('SENDGRID', 'SendGrid - Envío de Emails', 'EmailService', 
         'https://api.sendgrid.com/v3/', 'https://docs.sendgrid.com/', 1, 1, 
         'BEARER_TOKEN', 8000, 2),
        
        ('GOOGLE_MAPS', 'Google Maps API', 'Geocoding', 
         'https://maps.googleapis.com/maps/api/', 'https://developers.google.com/maps', 2, 1, 
         'API_KEY', 5000, 2),
        
        ('OPENWEATHER', 'OpenWeather API', 'Weather', 
         'https://api.openweathermap.org/data/2.5/', 'https://openweathermap.org/api', 3, 1, 
         'API_KEY', 3000, 2);

        PRINT '✅ Datos iniciales de ServiceProviders insertados';
    END

    -- Insertar ubigeos de ejemplo (Lima, Arequipa, Cusco)
    IF NOT EXISTS (SELECT 1 FROM [master].[Ubigeos] WHERE CodeSunat = '150101')
    BEGIN
        INSERT INTO [master].[Ubigeos] (
            [CodeSunat], [CodeReniec], [Department], [Province], [District],
            [Latitude], [Longitude], [Population], [AreaKm2], [IsCapital],
            [UbigeoType], [Category], [UrbanPercentage], [ValidFrom]
        ) VALUES 
        -- Ejemplos donde los códigos COINCIDEN
        ('150101', '150101', 'Lima', 'Lima', 'Lima', 
         -12.046374, -77.042793, 9750000, 2672.3, 1,
         'DISTRICT', 'METROPOLITANO', 100.00, '2000-01-01'),
        
        ('040101', '040101', 'Arequipa', 'Arequipa', 'Arequipa',
         -16.409047, -71.537451, 1008290, 69.8, 1,
         'DISTRICT', 'URBANO', 95.50, '2000-01-01'),
        
        -- Ejemplos donde los códigos NO COINCIDEN (casos reales)
        ('080101', '080102', 'Cusco', 'Cusco', 'Cusco',  -- Diferencia común
         -13.531950, -71.967463, 428450, 70.0, 1,
         'DISTRICT', 'URBANO', 92.30, '2000-01-01'),
        
        ('130101', '130102', 'La Libertad', 'Trujillo', 'Trujillo',
         -8.109052, -79.021534, 919899, 39.4, 1,
         'DISTRICT', 'URBANO', 94.80, '2000-01-01'),
        
        -- Ejemplo de distrito inactivo en SUNAT pero activo en RENIEC
        ('999999', '150132', 'Lima', 'Lima', 'San Juan de Lurigancho',
         -11.9900, -76.9900, 1200000, 131.2, 0,
         'DISTRICT', 'URBANO', 98.50, '2000-01-01');
        
        -- Actualizar notas de mapeo para los que no coinciden
        UPDATE [master].[Ubigeos]
        SET [MappingNotes] = 'Códigos diferentes entre sistemas. SUNAT usa código histórico.'
        WHERE [CodesMatch] = 0;
        
        PRINT '✅ ' + CAST(@@ROWCOUNT AS NVARCHAR) + ' registros de Ubigeos insertados';
    END

    COMMIT TRANSACTION;

    PRINT '✅ Datos iniciales insertados exitosamente';
    PRINT '';

END TRY
BEGIN CATCH
    IF @@TRANCOUNT > 0
        ROLLBACK TRANSACTION;

    DECLARE @ErrorMessage NVARCHAR(4000) = ERROR_MESSAGE();
    DECLARE @ErrorSeverity INT = ERROR_SEVERITY();
    DECLARE @ErrorState INT = ERROR_STATE();

    PRINT '❌ ERROR durante la inserción de datos iniciales:';
    PRINT '   Mensaje: ' + @ErrorMessage;
    PRINT '   Severidad: ' + CAST(@ErrorSeverity AS NVARCHAR);
    PRINT '   Estado: ' + CAST(@ErrorState AS NVARCHAR);

    THROW;
END CATCH;
GO

