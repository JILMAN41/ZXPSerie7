        [Username]          VARCHAR(50) NOT NULL,
        [UserId]            INT NULL,
        [EventType]         VARCHAR(50) NOT NULL,
        [IPAddress]         NVARCHAR(45) NULL,
        [UserAgent]         NVARCHAR(500) NULL,
        [Details]           NVARCHAR(1000) NULL,
        [DeviceId]          INT NULL
    );

